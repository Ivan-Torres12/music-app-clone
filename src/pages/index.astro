---
import Layout from '../layouts/Layout.astro';
import { playlists } from '../lib/data';
import Playlistcard from "../components/playlistcard.astro"
import Hora from '../components/hora.astro';
import Clima from '../components/clima.astro';

---

<Layout title="Clone spotify">
<div id="playlist-container"
class="relative transition-all duration-1000 bg-green-600"
>
    <div class="relative z-10 px-6 pt-6 ">
        <Hora/>
        <Clima/>
        <div class=" flex flex-wrap mt-6 gap-4">
        {
            playlists.map(playlists => <Playlistcard playlists={playlists}/>)
        }
    </div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80">

    </div>
</div>
</Layout>
	


