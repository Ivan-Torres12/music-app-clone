---
import AsideMenu from "../components/AsideMenu.astro"
import Headermenu from "../components/headermenu.astro"
import Headercenter from "../components/headeecenter.astro"
import Headerfinal from "../components/headerfinal.astro"
import { ViewTransitions } from "astro:transitions"
import {Player} from "../components/player.jsx"


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="src/icons/spotify.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions fallback="none" />
	</head>
	<body>
		<div id="app" class="h-screen gap-2 pl-2 pr-2">
			<header id="header" class="[grid-area:header] grid grid-cols-[1fr_1fr_1fr]">
				<div class="menu flex items-center" ><Headermenu/></div>
				<div class="flex items-center headercenter"><Headercenter /></div>
				<div class="flex items-center justify-end final "><Headerfinal /></div>
			</header>
			<aside class=" bg-zinc-800 rounded-lg  [grid-area:aside] flex flex-col overflow-y-auto asidemenu">
			  <AsideMenu />
			</aside>
			<main class="rounded-lg overflow-y-auto [grid-area:main] side ">
			  <slot />
			</main>
			<footer class="  [grid-area:player]  ">
				<Player client:load  transition:name="media-player" transition:persist />
			</footer>
		  </div>
	</body>
</html>
<style>
	
</style>

<style is:global>
	html {
	  font-family: system-ui, sans-serif;
	  background: #000;
	}
  
	.font-medium-custom {
	  font-weight: 500; /* Equivalente a medium en Tailwind */
	}
  
	.font-bold-custom {
	  font-weight: 700; /* Equivalente a bold en Tailwind */
	}
	/* Estilos personalizados para mejorar la responsividad del footer */
	@media (max-width: 750px) {
		footer {
			height: 70px; /* Ajustar tamaño en móviles */
			
		}
		.volumen,.musica,.asidemenu,#home,.final{
			display: none;
		}
		.slader{
			width: 230px;
		}
		.side{
			width: auto;
		}
		#app{
		display: grid;
		grid-template-areas: 
		"header header header"
		"main main main "
		"player player player"
		;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 60px 1fr 80px;
		}
		.article{
			width: 140px;
		}
		#saludos,#time{
			font-size: 2rem /* 36px */;
			line-height: 2.5rem
		}
		#center{
			margin-right: 5px;
			width: 150px;
		}
		#container{
			justify-content: end;
		}
		#menu{
			width: 70px;
		}
}
@media (max-width: 750px) {
		footer {
			height: 70px; /* Ajustar tamaño en móviles */
		}
		.volumen,.musica,.asidemenu,.final,#barra,#explorer{
			display: none;
		}
		.slader{
			width: 230px;
		}
