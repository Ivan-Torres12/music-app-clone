		"header header header"
		"main main main "
		"player player player"
		;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 60px 1fr 80px;
		}
		.article{
			width: 140px;
		}
		#center{
			
			margin-right: 20px;
			width: 260px;
			
		}
		.headercenter{
			padding: 12px;
			margin-right: 20px;

		}
		
}

	@media (min-width: 750px) and (max-width: 1024px) {
		footer {
