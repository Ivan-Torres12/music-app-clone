		}
		.slader{
			width: 300px;
		}
		.article{
			width: 160px;
		}
		.side{
			width: auto;	
		}
		#app{
		display: grid;
		grid-template-areas: 
		"header header header"
		"aside main main "
		"player player player"
		;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 60px 1fr 80px;
		}
		#center{
			padding: 0.75rem /* 12px */;
			margin-left: 1.5rem /* 16px */;
		}
		
	}

