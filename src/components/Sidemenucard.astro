---
import type {Playlist} from "../lib/data.ts"

interface Props {
    playlists:Playlist;
}
const {playlists} = Astro.props
const {id,cover,title,artists,color} = playlists

const artistsStrings = artists.join(",")
---

<a href={`/playlists/${id}`}
class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-500"
>
<picture class="h-12 w-12 float-none">
    <img src={cover} class="object-cover w-full h-full rounded-md" alt="">
</picture>
<div class="flex flex-auto flex-col truncate">
    <h4 class="text-white font-medium text-sm">
       {title} 
    </h4>
    <span class="text-gray-400 text-xs">{artistsStrings}</span>

</div>
</a>